module statics

imports
  signatures/minics-sig
  analysis/statements
  analysis/expressions
  analysis/types
  analysis/classes

rules init : scope

  init(s).

// Single-file entry point
rules programOk : Start

  programOk(Program(usings, classes)) :- {s}
    new s,
    init(s),
    usingsOk(s, usings),
    classesOk(s, classes).

// Multi-file entry point
rules projectOk : scope

  projectOk(s).

rules fileOk : scope * Start

  fileOk(s, _).
